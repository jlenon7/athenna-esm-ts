{
  "ts-node": {
    "esm": true,
    // Set "swc" to "false" to make type checks.
    "swc": true
  },
  "compilerOptions": {
    "strict": false,
    "rootDir": ".",
    "outDir": "build",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext"
  },
  "exclude": ["node_modules"]
}
